<html>
<head>
    @Styles.Render("~/login/css")
</head>
<body class="bg-info">
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-4 offset-md-4 col-sm-12 text-center">
                <img src="~/Content/logo.png" class="w-50" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6 offset-md-3 col-sm-12 bg-white rounded">
                <div class="row m-3">
                    <h2>
                        <i class="fa fa-lock"></i>
                        Đăng nhập quản trị
                    </h2>
                </div>
                <div class="row m-3 position-relative">
                    <input type="text" class="form-control" placeholder="Tài khoản/User" />
                    <i class="fa fa-user position-absolute" style="top:5px;right:5px;"></i>
                </div>
                <div class="row m-3 position-relative">
                    <input type="password" class="form-control" placeholder="Mật khẩu/Password" />
                    <i class="fa fa-key position-absolute"style="top:5px;right:5px;"></i>
                </div>
                <div class="row m-3 text-center">
                    <button class="btn btn-info col-md-4 offset-md-4 text-center">
                        Đăng nhập
                    </button>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3 col-sm-12">
                <button class="btn btn-link text-white col-md-4 offset-md-4">
                    Đổi mật khẩu
                </button>
            </div>
        </div>
    </div>
</body>
</html>

