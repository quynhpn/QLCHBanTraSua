@{ 
    Layout = null;
}
@using TSProject.Data
@model List<Product>
<html>
<head>
    @Styles.Render("~/login/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/content/ajax")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 bg-info text-center text-white">
                <h2>
                    SẢN PHẨM
                </h2>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-5 text-right">
                        <label>Sản phẩm</label>
                    </div>
                    <div class="col-md-5">
                        <input type="text" class="form-control" placeholder="Nhập sản phẩm" id="txtproductName" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-5">
                <button class="btn btn-info" onclick="SearchProduct()">
                    <i class="fa fa-search"></i>
                    Tìm kiếm
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-10">
                <button class="btn btn-outline-info">
                    <i class="fa fa-plus"></i>
                    Thêm mới
                </button>
            </div>
        </div>
        <div class="row mt-2" id="listProduct">
           @{ 
               Html.RenderAction("Search", new { page = 2, productName = "" });
           }
        </div>
    </div>
</body>
</html>

