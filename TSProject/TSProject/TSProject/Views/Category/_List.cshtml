@using PagedList
@using TSProject.Data
@model IPagedList<Category>
@using PagedList.Mvc
<table class="table table-hover table-bordered">
    <tr class="table-info">
        <th>STT</th>
        <th>Tên DM</th>
        <th>Ngày tạo</th>
        <th></th>
        <th></th>
    </tr>
    @{
        int stt = 0;
        foreach (Category cat in Model)
        {
            stt++;
            <tr class="table-danger">
                <td>@stt</td>
                <td>@cat.Name</td>
                <td>@cat.CreateDate</td>
                <td class="text-center">
                    <button class="btn btn-warning">
                        <i class="fa fa-edit"></i>
                        Sửa
                    </button>
                </td>
                <td class="text-center">
                    <button class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa
                    </button>
                </td>
            </tr>
        }
    }
</table>
Trang @Model.PageNumber/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Search", new { page, categoryName = " " }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "listCategory" }))



