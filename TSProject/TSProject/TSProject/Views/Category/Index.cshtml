@{ 
    Layout = null;
}
@using TSProject.Data
@model List<Category>
<html>
<head>
    @Styles.Render(("~/login/css"))
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center bg-info text-white">
                <h2> DANH MỤC SẢN PHẨM</h2>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-5 text-right">
                <label>Tên danh mục sản phẩm: </label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" placeholder="Nhập tên danh mục sản phẩm" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-5">
                <button class="btn btn-info">
                    <i class="fa fa-search"></i>
                    Tìm kiếm
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-10">
                <button class="btn btn-outline-info">
                    <i class="fa fa-plus"></i>
                    Thêm mới
                </button>
            </div>
        </div>
        <div class="row mt-2">
            <table class="table table-hover table-bordered">
                <tr class="table-info">
                    <th>STT</th>
                    <th>Tên DM</th>
                    <th>Ngày tạo</th>
                    <th></th>
                    <th></th>
                </tr>
                @{
                    int stt = 0;
                    foreach (Category cat in Model)
                    {
                        stt++;
                        <tr class="table-danger">
                            <td>@stt</td>
                            <td>@cat.Name</td>
                            <td>@cat.CreateDate</td>
                            <td class="text-center">
                                <button class="btn btn-warning">
                                    <i class="fa fa-edit"></i>
                                    Sửa
                                </button>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                    Xóa
                                </button>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</body>
</html>

