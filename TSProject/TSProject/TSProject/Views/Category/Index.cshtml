@{ 
    Layout = null;
}
@using TSProject.Data
@model List<Category>
<html>
<head>
    @Styles.Render("~/login/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/content/ajax")
    @Scripts.Render("~/content/bootstrap")
    @Scripts.Render("~/content/angular")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center bg-info text-white">
                <h2> DANH MỤC SẢN PHẨM</h2>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-5 text-right">
                <label>Tên danh mục sản phẩm: </label>
            </div>
            <div class="col-md-5">
                <input type="text" id="txtCategoryName" class="form-control" placeholder="Nhập tên danh mục sản phẩm" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-5">
                <button class="btn btn-info" onclick="SearchCategory()">
                    <i class="fa fa-search"></i>
                    Tìm kiếm
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2 offset-md-10">
                <button class="btn btn-outline-info" onclick="OpenForm()">
                    <i class="fa fa-plus"></i>
                    Thêm mới
                </button>
            </div>
        </div>
        <div class="row mt-2" id="listCategory">
            @{Html.RenderAction("Search", new {Page = 1, categoryName = "" });}
        </div>
    </div>
</body>
</html>
<div>
    <div class="modal" tabindex="-1" role="dialog" id="add-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm danh mục sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form ng-app="myApp" ng-controller="ctrlCategory" name="formCategory">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Tên danh mục sản phẩm</label>
                            </div>
                            <div class="col-md-8">
                                <input ng-model="txtCategoryName" name="txtCategoryName" type="text" class="form-control" value="" id="txtCategoryNameInsert" ng-required="true" maxlength="10" />
                                <span ng-show="formCategory.txtCategoryName.$error.required && formCategory.txtCategoryName.$dirty">
                                    Mời nhập dữ liệu
                                </span>
                                <span ng-show="formCategory.txtCategoryName.$error.maxlength && formCategory.txtCategoryName.$dirty">
                                    Dữ liệu nhập dài quá kí tự cho phép
                                </span>
                                <span ng-show="formCategory.txtCategoryName.$valid">
                                    Nhập thành công
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="SaveCategory()">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function OpenForm(){
        $("#add-modal").modal("show");
    }
    var app = angular.module("myApp", []);
    app.controller("ctrlCategory", function ($scope) {
    });
</script>

